# ChronoSphere Environment Configuration
# Copy this file to .env and fill in your values

# AI Provider Configuration
# Options: openai, anthropic, groq, fallback
AI_PROVIDER=openai

# OpenAI Configuration
OPENAI_API_KEY=sk-...

# Anthropic Configuration
ANTHROPIC_API_KEY=sk-ant-...

# Groq Configuration (Fast inference)
GROQ_API_KEY=gsk_...

# Wikidata Configuration
WIKIDATA_ENDPOINT=https://query.wikidata.org/sparql
WIKIDATA_CACHE_TTL=3600

# AKASHA Configuration
AKASHA_ENDPOINT=http://localhost:8002

# Atlas Framework Configuration
ATLAS_PERSISTENCE_PATH=./data/atlas

# Server Configuration
NODE_ENV=development
PORT=8000
WS_PORT=8001

# Redis Configuration (optional, for caching)
REDIS_URL=redis://localhost:6379

# Monitoring
ENABLE_MONITORING=true
LOG_LEVEL=info